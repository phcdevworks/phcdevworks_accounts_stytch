<h1>Register</h1>

<%= form_with url: password_register_path, method: :post do |form| %>
  <div>
    <%= form.label :email, "Email" %>
    <%= form.email_field :email %>
  </div>
  <div>
    <%= form.label :password, "Password" %>
    <%= form.password_field :password %>
  </div>
  <div>
    <%= form.label :organization_slug, "Organization Slug" %>
    <%= form.text_field :organization_slug %>
  </div>
  <%= form.submit "Register" %>
<% end %>
