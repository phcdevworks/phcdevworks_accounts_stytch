<h1>Reset Your Password Using Your Session</h1>

<%= form_with url: b2b_password_reset_session_path, method: :post, local: true do |form| %>
  <div class="form-group">
    <%= form.label :session_token, 'Session Token' %>
    <%= form.text_field :session_token, class: 'form-control', required: true %>
  </div>
  <div class="form-group">
    <%= form.label :password, 'New Password' %>
    <%= form.password_field :password, class: 'form-control', required: true %>
  </div>
  <div class="form-group">
    <%= form.label :organization_slug, 'Organization Slug' %>
    <%= form.text_field :organization_slug, class: 'form-control', required: true %>
  </div>
  <div class="form-group">
    <%= form.submit 'Reset Password', class: 'btn btn-primary' %>
  </div>
<% end %>

<%= link_to 'Back to login', login_path %>
