<h1>Revoke Invite</h1>

<%= form_with url: b2c_magic_links_revoke_invite_path, local: true do |form| %>
  <div class="field">
    <%= form.label :email, "Invitee's Email" %><br>
    <%= form.email_field :email, required: true %>
  </div>

  <div class="actions">
    <%= form.submit "Revoke Invite" %>
  </div>
<% end %>
