<h1>Login</h1>

<%= form_with url: login_path, method: :post, local: true do |form| %>
  <div>
    <%= form.label :email, "Email for Magic Link" %>
    <%= form.email_field :email %>
  </div>
  <div>
    <%= form.submit "Send Magic Link" %>
  </div>
<% end %>

<%= form_with url: google_login_path, method: :post, local: true do |form| %>
  <div>
    <%= form.label :google_token, "Google Token" %>
    <%= form.text_field :google_token %>
  </div>
  <div>
    <%= form.submit "Login with Google" %>
  </div>
<% end %>
